<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="3dp"
    android:background="@android:color/darker_gray">

    <ImageButton
        android:id="@+id/itemEditViewPlusOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@android:drawable/ic_input_add"
        android:padding="0dp"
        android:background="@android:color/darker_gray"/>

    <EditText
        android:id="@+id/itemEditViewAmount"
        android:text="@string/itemEditViewAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/itemEditViewPlusOne"/>

    <ImageButton
        android:id="@+id/itemEditViewMinusOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_toRightOf="@+id/itemEditViewAmount"
        android:src="@android:drawable/presence_busy"
        android:padding="1dp"
        />

    <EditText
        android:id="@+id/itemEditViewType"
        android:text="@string/itemEditViewType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:maxLength="6"
        android:inputType="textAutoComplete"
        android:layout_toRightOf="@+id/itemEditViewMinusOne" />


    <TextView
        android:id="@+id/itemEditViewName"
        android:text="@string/itemEditViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_toLeftOf="@+id/itemEditViewDelete"
        android:textColor="@android:color/background_dark"
        android:paddingRight="20dp"
        />

    <ImageButton
        android:id="@+id/itemEditViewDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:src="@android:drawable/presence_busy"
        android:layout_marginRight="2dp"
        android:padding="0dp"
        />


</RelativeLayout>